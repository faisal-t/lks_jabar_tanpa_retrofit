<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:background="#D7D7D7"
    android:orientation="horizontal"
    android:layout_height="200dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="10dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_menu_id"
            android:textColor="#626972"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu ID"/>

        <TextView
            android:id="@+id/txt_menu_name"
            android:textColor="#626972"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Name"/>

        <TextView
            android:id="@+id/txt_menu_description"
            android:textColor="#626972"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <TextView
            android:id="@+id/txt_menu_price"
            android:textColor="#626972"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.20.000"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_margin="5dp"
            android:background="#069EF5"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_delete"
            android:background="#F70808"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>